[
  {
    "create": "users",
    "validator": {
        "$jsonSchema": {
          "bsonType": "object",
          "required": ["_id", "categories"],
          "properties": {
            "_id": {"bsonType":  "string"},
            "categories": {
              "bsonType": "array",
              "items": {
                "bsonType": "object",
                "required": ["_id", "name", "folders"],
                "properties": {
                  "_id": {"bsonType": "string"},
                  "name": {"bsonType": "string"},
                  "folders": {
                    "bsonType": "array",
                    "items": {
                      "bsonType": "object",
                      "required": ["name"],
                      "properties": {
                        "name": {"bsonType": "string"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
    }
  },
  {
    "create": "files",
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["_id", "name", "size", "type", "version", "created_at", "categories"],
        "properties": {
          "_id": {"bsonType": "string"},
          "name": {"bsonType":  "string"},
          "description": {"bsonType": "string"},
          "size": {"bsonType": "string"},
          "type": {"bsonType": "string"},
          "version": {"bsonType": "string"},
          "created_at": {"bsonType": "date"},
          "categories": {
            "bsonType": "array",
            "items": {
              "bsonType": "object",
              "required": ["category_id", "folders"],
              "properties": {
                "category_id": {"bsonType": "string"},
                "folders": {
                  "bsonType": "array",
                  "items": {
                    "bsonType": "object",
                    "required": ["name"],
                    "properties": {
                      "name": {"bsonType": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
]

